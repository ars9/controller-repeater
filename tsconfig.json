{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "alwaysStrict": true
  },
  "include": ["src/**/*", "test/*.spec.ts"],
  "exclude": ["node_modules"]
}
